<div class="container col-sm-12 col-md-6 col-lg-3 my-5 p-5 card-trip" id="unavailable-dates" data-unavailable="<%= @booking.garden.unavailable_dates.to_json %>">
  <h3>Edit booking details</h3>
  <%= simple_form_for @booking do |f| %>
  <%= f.error_notification %>
  <% if @booking.user = current_user %>
    <%= f.input :status, collection: (Booking::STATUS - %w(Confirmed Declined) ) %>      
  <% else %>
    <%= f.input :status, collection: (Booking::STATUS - %w(Cancelled) ) %>              
  <% end %>
  <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
  <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>
  <div class="form-actions mt-5">
    <%= f.button :submit, "Edit!", class: "btn btn-success btn-block"%>
  </div>
  <% end %>
</div>