<div class="container" id="unavailable-dates" data-unavailable="<%= @booking.garden.unavailable_dates %>">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-9 col-6">
      <h2 class="text-center">Edit booking details</h2>
      <%= simple_form_for @booking do |f| %>
      <%= f.error_notification %>
      <% if @booking.user = current_user %>
        <%= f.input :status, collection: (Booking::STATUS - %w(Confirmed Declined) ) %>      
      <% else %>
        <%= f.input :status, collection: (Booking::STATUS - %w(Cancelled) ) %>              
      <% end %>
      <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Edit!", class: "btn btn-outline-success btn-lg"%>
      <% end %>
    </div>
  </div>
</div>