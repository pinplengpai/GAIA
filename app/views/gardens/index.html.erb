<div class="home-banner">
  <div id="cta-wrapper">
    <span id="banner-typed">Make your event more</span>
    <div>
      <span id="banner-typed-text"><span class="typed-cursor"></span></span>
    </div>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @gardens.each do |garden| %>
     <%= link_to garden do  %>
    <div class="card-trip card-trip-index m-3">
      <%= cl_image_tag garden.picture %>
      <div class="card-trip-infos">
        <div>
          <h2><%= "#{garden.name[0..25]}..." %></h2>
          <p><%= garden.address %></p>
        </div>
        <h2 class="card-trip-pricing">$<%= garden.price %></h2>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
