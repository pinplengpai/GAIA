  <div class="notification">
    <%= cl_image_tag(garden.picture, class:"img-garden") %>
    <div class="notification-content">
      <h3 class="garden-card-title"><%= garden.name.upcase %></h3>
      <p><small>Garden added on the <%= garden.created_at.strftime("%b %d") %></small></p>
      <p><strong><%= garden.amount_of_bookings %></strong> bookings | <strong><%= garden.amount_of_days %></strong> total days</p>
    </div>

    <div class="notification-actions d-flex">
      <%= link_to 'Edit', edit_garden_path(garden[:id]), class:"button space-btw-button"%>
      <%= link_to 'Delete', garden_path(garden), method: :delete, data: { confirm: "Sure?" }, class:"button space-btw-button"%>
    </div>
  </div>
