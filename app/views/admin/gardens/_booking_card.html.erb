  <div class="notification">
    <%= cl_image_tag(booking.garden.picture, class:"img-garden") %>
    <div class="notification-content">
      <h3 class="garden-card-title"><%= booking.garden.name.upcase %></h3>
      <p><small>Garden added on the <%= booking.garden.created_at.strftime("%b %d") %></small></p>
      <p><strong><%= booking.garden.amount_of_bookings %></strong> bookings | <strong><%= booking.garden.amount_of_days %></strong> total days</p>
    </div>


    <div class="notification-actions d-flex">
      <%= link_to edit_booking_path(booking[:id]), class:"btn btn-success" do %>
        <i class="fas fa-pencil-alt"></i> Edit
      <% end %>
      <%= link_to booking_path(booking), class:"btn btn-success" do %>
        <i class="fas fa-bookmark"></i> Booking
      <% end %>
    </div>
  </div>
